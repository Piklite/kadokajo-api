// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   Int     @default(autoincrement()) @id
  email                String  @unique
  username             String  
  password             String
  createdWishlists     Wishlist[]
  partakesInWishlists  WishlistsPartakers[]
}

model Wishlist {
  id           Int                  @default(autoincrement()) @id
  title        String
  description  String? 
  wishes       Wish[]
  createdBy    User                 @relation(fields: [ownerId], references: [id])
  ownerId      Int
  partakers    WishlistsPartakers[]
  createdAt    DateTime             @default(now())
}

model Wish {
  id           Int       @default(autoincrement()) @id
  title        String
  description  String?
  wishlist     Wishlist  @relation(fields: [wishlistId], references: [id])
  wishlistId   Int
  creatorId    Int
  createdAt    DateTime  @default(now())
}

model WishlistsPartakers {
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
  wishlist    Wishlist  @relation(fields: [wishlistId], references: [id])
  wishlistId  Int

  @@id([userId, wishlistId])
}